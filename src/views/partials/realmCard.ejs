<div class="container">
    <% if (charactersInRealm.length > 0) { %>
    <% charactersInRealm.forEach(character => { %>
    <div class="card-body">
        <div class="card">
            <h2><%= character.name %></h2>
            <% if (character.image.startsWith('http')) { %>
                <img class="img-per-realm" src="<%= character.image %>" alt="<%= character.name %>">
            <% } else { %>
                <img class="img-per-realm" src="/img/<%= character.image || 'tierras-magicas.jpg' %>" alt="<%= character.name %>">
            <% } %>
            <h6>Reino <%= character.realms ? character.realms.name : 'Desconocido' %></h6>
            <p>Puntos: <%= character.power %></p>
            <p>Elemento: <%= character.elements ? character.elements.name : 'Desconocido' %></p>
            <button class="see-more">Descripción ↓</button>
            <p class="card-text"><%= character.description %></p>
        </div>
    </div>
    <% }) %>
</div>
    
    <% } else { %>
        <h1 class="result">No Hay personajes de este reino</h1>
    <% } %>